<aura:component extensible="true" controller="AuraUtils" implements="force:appHostable,force:lightningQuickAction,force:hasRecordId,flexipage:availableForAllPageTypes">
    <aura:attribute name="allowLogException" type="Boolean" default="true"/>
    <aura:attribute name="spinner" type="Boolean" default="false"/>
    
    <aura:if isTrue="{!v.spinner}">
       <lightning:spinner alternativeText="Loading" size="large" />
  	</aura:if>
	{!v.body}
</aura:component>